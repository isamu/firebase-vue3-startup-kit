{
  "name": "functions",
  "scripts": {
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint --ext .js,.ts .",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
